<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:listDivider">@android:color/transparent</item>
        <item name="colorNavigationItem">@color/menu_item_color_state</item>
        <item name="colorNavigationItemSelected">@color/white</item>
        <item name="drawableNavigationItemBackground">@drawable/menu_background_color_state</item>
    </style>

    <style name="MainFontStyle" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/majora</item>
    </style>

    <style name="PageTitleStyle" parent="@style/MainFontStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">40dip</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">30sp</item>
    </style>


    <style name="TextAppearance.ToolbarTitle" parent="@style/MainFontStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.Custom.NavigationView" parent="Widget.Design.NavigationView">
        <item name="itemIconTint">?attr/colorNavigationItem</item>
        <item name="itemTextColor">?attr/colorNavigationItem</item>
        <item name="itemBackground">?attr/drawableNavigationItemBackground</item>
    </style>

    <style name="Theme.Toolbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <!-- color used by navigation icon and overflow icon -->
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="TextStyleRuleTitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:fontFamily">@font/majora</item>
        <item name="android:textSize">@dimen/textSizeBig</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_margin">@dimen/margin_basic</item>
    </style>

    <style name="TextStyleRule" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:fontFamily">@font/light</item>
        <item name="android:textSize">@dimen/textSizeNormal</item>
        <item name="android:textColor">@color/grey2</item>
        <item name="android:layout_marginStart">@dimen/margin_basic</item>
        <item name="android:layout_marginEnd">@dimen/margin_basic</item>
        <item name="android:layout_marginBottom">@dimen/margin_basic</item>
    </style>


    <style name="ButtonStyle" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="android:layout_height">50dip</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:fontFamily">@font/majora_bold</item>
        <item name="cornerRadius">25dip</item>
        <item name="backgroundTint">@color/button_state_color</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">@dimen/margin_basic</item>
    </style>

    <style name="ButtonStyleDestructive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:fontFamily">@font/majora_bold</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:layout_margin">@dimen/margin_small</item>
    </style>

    <style name="ButtonStyleText" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:fontFamily">@font/majora_bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_margin">@dimen/margin_small</item>
    </style>


</resources>

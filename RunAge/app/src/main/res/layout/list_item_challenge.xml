<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="0dip"
        android:layout_height="0dip"
        android:layout_margin="@dimen/margin_basic"
        android:layout_marginStart="0dip"
        android:layout_marginLeft="@dimen/margin_basic"
        android:layout_marginEnd="0dip"
        android:layout_marginRight="@dimen/margin_basic"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="0dip"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="10dip"
        app:cardElevation="4dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="2dip"
        android:elevation="4dip"
        android:fontFamily="@font/majora"
        android:gravity="center"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="3"
        tools:visibility="gone" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/star1"
        android:layout_width="20dip"
        android:layout_height="20dip"
        android:elevation="4dip"
        android:layout_marginTop="10dip"
        app:layout_constraintEnd_toStartOf="@+id/star2"
        app:layout_constraintStart_toStartOf="@+id/card"
        app:layout_constraintTop_toTopOf="@+id/card"
        app:srcCompat="@drawable/ic_star_border" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/star2"
        android:layout_width="25dip"
        android:layout_height="25dip"
        android:elevation="4dip"
        app:layout_constraintEnd_toStartOf="@+id/star3"
        app:layout_constraintStart_toEndOf="@+id/star1"
        app:layout_constraintTop_toTopOf="@+id/card"
        app:srcCompat="@drawable/ic_star_border" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/star3"
        android:layout_width="20dip"
        android:layout_height="20dip"
        android:elevation="4dip"
        android:layout_marginTop="10dip"
        app:layout_constraintEnd_toEndOf="@id/card"
        app:layout_constraintStart_toEndOf="@+id/star2"
        app:layout_constraintTop_toTopOf="@+id/card"
        app:srcCompat="@drawable/ic_star_border" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_gravity="center"
        android:elevation="4dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_locked"
        app:tint="@color/white" />
</androidx.constraintlayout.widget.ConstraintLayout>